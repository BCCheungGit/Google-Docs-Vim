{
    "manifest_version": 3,
    "name": "Vim for Google Docs",
    "version": "1.0",
    "description": "Vim keybindings for Google Docs",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://docs.google.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
